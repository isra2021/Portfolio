<div class="row">
    <div class="col-3 mx-auto mt-2">
        <div class="card text-center">
            <div class="card-header">
                <h3>Edit Note</h3>
            </div>
            <div class="card-body">
                <form action="/notes/edit/{{note._id}}?_method=PUT" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                    <div class="form-group mb-2">
                        <input type="text" name="title" class="form-control" value="{{note.title}}" autofocus>
                    </div>
                    <div class="form-group">
                        <textarea name="description" class="form-control mb-2" >{{note.description}}</textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block w-100">Edit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>